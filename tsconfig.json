{
    "compileOnSave"   : false,
    "compilerOptions" : {
        "esModuleInterop"        : true,
        "declaration"            : false,
        "typeRoots"              : [
            "./node_modules/@types"
        ],
        "removeComments"         : true,
        "emitDecoratorMetadata"  : true,
        "experimentalDecorators" : true,
        "sourceMap"              : true,
        "target"                 : "ES5",
        "lib"                    : [
            "es2015",
            "es2020",
            "dom"
        ],
        "moduleResolution"       : "node",
        "baseUrl"                : "src",
        "resolveJsonModule"      : true,
        "allowJs"                : true,
        "skipLibCheck"           : true
    },
    "include"         : [
        "src",
        "test"
    ],
    "atom"            : {
        "rewriteTsconfig" : false
    }
}
